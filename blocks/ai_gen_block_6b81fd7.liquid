{% doc %}
  @prompt
    I have a metaobject called url_script that has a metafield inside. The meta field is called Color Related products and has as fields the following: label, ref_product, title, ref_color and ref_title.
    The purpose here is to create a component that relates different products that are added to the metafield url_script in each product, remove the sub-title and the maximum products to show. It should show all the products that are added on the metafield, the heading should have the body font-style, Remove the field:  columns in mobile
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-related-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-related-products-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-related-products-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-related-products-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-weight: {{ settings.type_body_font.weight }};
    font-style: {{ settings.type_body_font.style }};
  }

  .ai-related-products-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax({{ block.settings.min_card_width }}px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.spacing_between_elements }}px;
  }

  .ai-related-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-related-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-related-product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-related-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-related-product-card-{{ ai_gen_id }}:hover .ai-related-product-image-{{ ai_gen_id }} img {
    transform: scale(1.05);
  }

  .ai-related-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-related-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-related-product-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-related-product-label-{{ ai_gen_id }} {
    color: {{ block.settings.label_color }};
    font-size: {{ block.settings.label_size }}px;
    font-weight: 500;
    margin: 0 0 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-related-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 600;
    margin: 0 0 4px;
    line-height: 1.3;
  }

  .ai-related-product-ref-title-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.ref_title_size }}px;
    margin: 0 0 8px;
    opacity: 0.7;
  }

  .ai-related-product-color-{{ ai_gen_id }} {
    color: {{ block.settings.color_text_color }};
    font-size: {{ block.settings.color_size }}px;
    margin: 0;
    font-style: italic;
  }

  .ai-related-products-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-related-products-empty-{{ ai_gen_id }} h3 {
    font-size: 18px;
    margin: 0 0 8px;
  }

  .ai-related-products-empty-{{ ai_gen_id }} p {
    font-size: 14px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-related-products-grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-related-products-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-related-product-content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-related-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-related-products-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <div class="ai-related-products-header-{{ ai_gen_id }}">
        <h2 class="ai-related-products-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      </div>
    {% endif %}

    {% liquid
      assign url_script_metaobject = product.metafields.custom.url_script
      assign has_related_products = false
    %}

    {% if url_script_metaobject != blank %}
      {% assign color_related_products = url_script_metaobject.color_related_products %}
      
      {% if color_related_products != blank and color_related_products.size > 0 %}
        {% assign has_related_products = true %}
        
        <div class="ai-related-products-grid-{{ ai_gen_id }}">
          {% for related_item in color_related_products %}
            {% liquid
              assign ref_product = related_item.ref_product
              assign label = related_item.label
              assign title = related_item.title
              assign ref_color = related_item.ref_color
              assign ref_title = related_item.ref_title
            %}
            
            {% if ref_product != blank %}
              <a href="{{ ref_product.url }}" class="ai-related-product-card-{{ ai_gen_id }}">
                <div class="ai-related-product-image-{{ ai_gen_id }}">
                  {% if ref_product.featured_image %}
                    <img
                      src="{{ ref_product.featured_image | image_url: width: 400 }}"
                      alt="{{ ref_product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="400"
                      height="{{ 400 | divided_by: block.settings.image_aspect_ratio }}"
                    >
                  {% else %}
                    <div class="ai-related-product-image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                
                <div class="ai-related-product-content-{{ ai_gen_id }}">
                  {% if label != blank %}
                    <div class="ai-related-product-label-{{ ai_gen_id }}">{{ label }}</div>
                  {% endif %}
                  
                  {% if title != blank %}
                    <h3 class="ai-related-product-title-{{ ai_gen_id }}">{{ title }}</h3>
                  {% else %}
                    <h3 class="ai-related-product-title-{{ ai_gen_id }}">{{ ref_product.title }}</h3>
                  {% endif %}
                  
                  {% if ref_title != blank %}
                    <div class="ai-related-product-ref-title-{{ ai_gen_id }}">{{ ref_title }}</div>
                  {% endif %}
                  
                  {% if ref_color != blank %}
                    <div class="ai-related-product-color-{{ ai_gen_id }}">{{ ref_color }}</div>
                  {% endif %}
                </div>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    {% endif %}

    {% unless has_related_products %}
      <div class="ai-related-products-empty-{{ ai_gen_id }}">
        <h3>No related products found</h3>
        <p>Configure the url_script metaobject with color related products to display them here.</p>
      </div>
    {% endunless %}
  </div>
</div>

